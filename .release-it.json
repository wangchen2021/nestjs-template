{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    },
    "@release-it/bumper": {
      "out": []
    }
  },
  "hooks": {
    "after:bump": "echo new Version ${version}"
  }
}
